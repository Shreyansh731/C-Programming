#include <stdio.h>
int main(){
    int num_1,num_2,num_3;
    double marks;
    printf ("enter num_1 : ");
    scanf ("%d",&num_1);
    printf ("enter num_2 : ");
    scanf ("%d",&num_2);
    printf ("enter num_3 : ");
    scanf ("%d",&num_3);

    marks = ((num_1+num_2+num_3)/300.0)*100;
    printf ("\ntotal marks are : %.2f%%\n",marks);

    if(num_1>100 || num_1<0 || num_2>100||num_2<0 || num_3>100 || num_3<0){
        printf ("\n invalid input , plese enter the marks between 0 to 100 \n");
    return 0;
}

if (marks<=100&&marks>=80){
    printf ("\n A \n");
}
else if (marks<80&&marks>=60){
    printf ("\n B \n");
}
else if(marks<60&&marks>=40){
    printf ("\n C \n");
}
else if (marks<40&&marks>=35){
    printf ("\n D \n");
}
else {
    printf("\n E \n");
    printf ("\n not passed \n");

}
switch ((int)marks/10){

case 10:
    printf ("\n well done  \n");
    break;
case 9 :
    printf ("\n well done \n");
     break;
case 8 :         
    printf ("\n well done \n");
     break;
case 7 : 
    printf ("\n good but can do better \n");   
     break;
case 6 :
     printf ("\n good but can do better \n");   
     break;
case 5 : 
     printf ("\n good but can do better \n");   
     break;
case 4 : 
     printf ("\n average but can do better \n");   
     break;    
case 3 :
     printf ("\n good but can do better \n");   
     break;
default:
    printf (" \n need attention , not passed \n");

}



return 0;
} 
