#include <stdio.h>
int findSum(int n) {
    int sum = 0; 
    int i;       

    for (i = 1; i <= n; i++) {
        sum += i; 
    }

    return sum; 
}

int main() {
    int n; 

    printf("Enter a positive integer 'n': ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Please enter a positive integer.\n");
    } else {

        int result = findSum(n);

        printf("The sum of the first %d natural numbers is: %d\n", n, result);
    }

    return 0;
}
 
