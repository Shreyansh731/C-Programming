#include <stdio.h>

void swap(int *a, int *b) {
    printf("Initial values: a = %d, b = %d\n", *a, *b);

    *a = *a + *b;
    *b = *a - *b;
    *a = *a - *b;
    printf("Swapped values:  a = %d, b = %d\n", *a, *b);
}

int main() {
    int x = 10;
    int y = 20;

    printf("Original numbers in main: x = %d, y = %d\n", x, y);
    swap(&x, &y);
    printf("Numbers after swap in main: x = %d, y = %d\n", x, y);
    return 0;
}
